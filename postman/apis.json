	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var uid = pm.environment.get(\"uid\");",
					"var access_token = pm.environment.get(\"access_token\");",
					"var client = pm.environment.get(\"client\");",
					"",
					"if(uid){",
					"    pm.request.headers.add({",
					"    key: 'uid',",
					"    value: uid",
					"    });",
					"}",
					"",
					"if(client){",
					"    pm.request.headers.add({",
					"    key: 'client',",
					"    value: client",
					"    });",
					"}",
					"",
					"if(access_token){",
					"    pm.request.headers.add({",
					"    key: 'access-token',",
					"    value: access_token",
					"    });",
					"}",
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var access_token = pm.response.headers.get(\"access-token\");",
					"var client = pm.response.headers.get(\"client\");",
					"var uid = pm.response.headers.get(\"uid\");",
					"",
					"if(access_token){",
					"    pm.environment.set(\"access_token\", access_token);",
					"}",
					"if(client){",
					"    pm.environment.set(\"client\", client);",
					"}",
					"if(uid){",
					"    pm.environment.set(\"uid\", uid);",
					"}",
					""
				]
			}
		}
	]
